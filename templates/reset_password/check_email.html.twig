{% extends 'base.html.twig' %}

{% block title %}
	Password Reset Email Sent
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h3 class="text-center text-purple">Password Reset Email Sent</h3>
		<hr class="bg-purple mb-5">

		<p>
			The message that contains a link that you can use to reset your password was sent to your email. This link will expire in
			{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
		</p>
		<p>If you don't receive an email please check your spam folder or
			<a class="text-purple" href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
	</div>
{% endblock %}
