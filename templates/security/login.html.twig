{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h3 class="text-center text-purple">Login</h3>
		<hr class="bg-purple mb-5">
		<div class="row pt-md-5 pt-0 align-items-center justify-content-center gap-lg-5">
			<div class="col-lg-5 col-md-6 mb-5 mb-md-0">
				<img class="img-fluid" src={{ asset('images/login.svg') }} alt="Login Image">
			</div>
			<div class="col-lg-5 col-md-6">
				<form method="post">
					<h2 class="mb-4 fw-bold text-center">Member Login</h2>
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<div class="form-outline mb-3">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg" autocomplete="email" required autofocus/>
						<label class="form-label" for="inputEmail">Email</label>
					</div>
					<div class="form-outline mb-3">
						<input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required/>
						<label class="form-label" for="inputPassword">Password</label>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="text-center">
						<button class="btn btn-block btn-lg btn-purple" type="submit">
							Login
						</button>
						<p class="small mt-3 mb-4 text-muted">Forgot your
							<span class="fw-bold">
								<a href={{ path('app_forgot_password_request') }} class="text-muted">Password</a>?</span>
						</p>
						<a href={{ path('user_register') }} class="text-purple">Create your Account
							<i class="fas fa-long-arrow-alt-right"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
